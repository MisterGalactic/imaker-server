{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "semi": [2, "never"],
    "comma-dangle": [2, "never"],
    "max-len": 0,
    "radix": 0,
    "global-require": 0,
    "prefer-object-spread": 0,
    "object-curly-newline": 0,
    "no-await-in-loop": 0,
    "no-param-reassign": [2, {
      "props": true,
      "ignorePropertyModificationsFor": ["draft", "req", "res", "instance"]
    }],
    "import/prefer-default-export": 0
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["@", "./src"]
        ],
        "extensions": [".js", ".jsx", ".css", ".scss", ".json"]
      }
    }
  }
}
